<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#E7E7E7" /> <!-- Light grey background -->

    <!-- Button border (optional) -->
    <stroke
        android:width="2dp"
        android:color="#808080" /> <!-- Darker grey for the border -->

    <!-- Corner radius (optional, if you want rounded corners) -->
    <corners android:radius="4dp" /> <!-- Adjust radius for roundness -->

    <!-- Padding inside the button (optional) -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="4dp"
        android:bottom="4dp" />

</shape>
